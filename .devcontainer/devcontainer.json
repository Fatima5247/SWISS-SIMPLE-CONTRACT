{
"name": "SWISS-SIMPLE-CONTRACT Dev Environment",
"image": "mcr.microsoft.com/devcontainers/base:ubuntu",

// Enable Docker daemon inside Codespace
"features": {
"ghcr.io/devcontainers/features/docker-in-docker:2": {
"version": "latest"
},
"ghcr.io/devcontainers/features/git:1": {},
"ghcr.io/devcontainers/features/node:1": {
"version": "lts"
},
"ghcr.io/devcontainers/features/python:1": {
"version": "3.11"
}
},

// Install Hardhat, Truffle, and other Ethereum dev tools
"postCreateCommand": "npm install -g hardhat truffle ganache && sudo service docker start",

"customizations": {
"vscode": {
"settings": {
"terminal.integrated.shell.linux": "/bin/bash"
},
"extensions": [
"juanblanco.solidity",
"ms-azuretools.vscode-docker",
"esbenp.prettier-vscode"
]
}
},

// Verify Docker status on container startup
"postStartCommand": "docker version || echo 'Docker not running â€” rebuild container if needed.'"
}

